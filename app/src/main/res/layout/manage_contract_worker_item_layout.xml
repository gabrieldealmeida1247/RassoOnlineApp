<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#6BFFC29F"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:id="@+id/linerar_t"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="20dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp"
        android:paddingBottom="20dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:orientation="vertical"
        android:gravity="center_vertical"
        android:elevation="8dp"
        android:background="@color/white">

        <TextView
            android:id="@+id/textView_project_name_contract"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nome_Projecto"
            android:textColor="#000000"
            android:textSize="24sp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/textView_project_description_contract"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Descrição do Projecto"
            android:textColor="#000000"

            android:textSize="16sp"
            android:textStyle="normal" />
    </LinearLayout>
    <!--Titulo do projecto-->

    <ScrollView
        android:id="@+id/scroll"
        android:layout_below="@id/linerar_t"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"


        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"

            android:orientation="vertical">

            <HorizontalScrollView

                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:orientation="horizontal">



                    <LinearLayout
                        android:layout_width="330dp"
                        android:layout_height="265dp"
                        android:padding="10dp"
                        android:orientation="vertical"
                        android:layout_marginStart="5dp"
                        android:gravity="center_horizontal"
                        android:elevation="2dp"
                        android:background="@drawable/carrosel_manager">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="sans-serif"
                                android:textStyle="normal"
                                android:textSize="25sp"
                                android:textColor="#000000"
                                android:text="Participantes"/>

                            <ImageView
                                android:id="@+id/button_chat_contract"
                                android:layout_marginRight="90dp"
                                android:layout_marginLeft="90dp"
                                android:layout_width="22dp"
                                android:layout_height="22dp"
                                android:src="@drawable/send_icon" />


                        </LinearLayout>
                        <View
                            android:id="@+id/view_line"
                            android:layout_width="match_parent"
                            android:layout_height="1.5dp"
                            android:background="#ff5c00"
                            android:layout_marginEnd="80dp"
                            android:layout_marginStart="25dp"
                            android:visibility="visible"
                            />

                        <LinearLayout
                            android:layout_marginTop="30dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_marginTop="10dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center_vertical">

                                <de.hdodenhof.circleimageview.CircleImageView
                                    android:layout_width="32dp"
                                    android:layout_height="32dp"
                                    android:src="@drawable/profile" />

                                <TextView
                                    android:id="@+id/textView_project_name_worker_contract"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="sans-serif"
                                    android:layout_marginRight="10dp"
                                    android:layout_marginLeft="10dp"
                                    android:textStyle="normal"
                                    android:textSize="20sp"
                                    android:textColor="#000000"
                                    tools:text="Diogo Alucarte"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="sans-serif"
                                    android:textStyle="normal"
                                    android:layout_marginStart="5dp"
                                    android:textSize="20sp"
                                    android:textColor="#000000"
                                    android:text="Trabalhador"/>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center_vertical">

                                <de.hdodenhof.circleimageview.CircleImageView
                                    android:layout_width="32dp"
                                    android:layout_height="32dp"
                                    android:src="@drawable/profile" />
                                <TextView
                                    android:id="@+id/textView_project_name_client_contract"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="sans-serif"
                                    android:layout_marginRight="10dp"
                                    android:layout_marginLeft="10dp"
                                    android:textStyle="normal"
                                    android:textSize="20sp"
                                    android:textColor="#000000"
                                    tools:text="Daniela Belmont"/>

                                <TextView

                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="sans-serif"
                                    android:textStyle="normal"
                                    android:layout_marginStart="5dp"
                                    android:textSize="20sp"
                                    android:textColor="#000000"
                                    android:text="Cliente"/>
                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>




                    <LinearLayout
                        android:layout_width="330dp"
                        android:layout_height="265dp"
                        android:padding="10dp"
                        android:orientation="vertical"
                        android:gravity="center_horizontal"
                        android:layout_marginStart="5dp"
                        android:elevation="2dp"
                        android:background="@drawable/carrosel_manager">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="sans-serif"
                                android:textStyle="normal"
                                android:textSize="25sp"
                                android:textColor="#000000"
                                android:text="Prazo"/>

                            <ImageView
                                android:id="@+id/button_edit_text"
                                android:layout_marginHorizontal="50dp"
                                android:layout_width="22dp"
                                android:layout_height="22dp"
                                android:src="@drawable/baseline_edit_24" />

                            <ImageView
                                android:id="@+id/button_save_text"
                                android:layout_width="22dp"
                                android:layout_height="22dp"
                                android:src="@drawable/save_edited_info" />


                        </LinearLayout>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1.5dp"
                            android:background="#ff5c00"
                            android:layout_marginEnd="80dp"
                            android:layout_marginStart="25dp"
                            android:visibility="visible"
                            />

                        <LinearLayout
                            android:layout_marginTop="30dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">


                            <ProgressBar
                                android:id="@+id/progressBar_contract"
                                style="?android:attr/progressBarStyleHorizontal"
                                android:layout_width="200dp"
                                android:layout_marginStart="10dp"
                                android:layout_height="wrap_content"
                                android:scaleY="4"
                                android:clickable="true"
                                android:progressBackgroundTint="#ff5c00"
                                />

                            <TextView
                                android:id="@+id/textView_inicial_date_contract"

                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="sans-serif"
                                android:text="Início: DD/MM/AA ou horas/ minutos atrás"
                                android:textColor="#000000"
                                android:textSize="16sp"
                                android:textStyle="normal" />

                            <TextView
                                android:id="@+id/termino_contract"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="sans-serif"
                                android:hint="Termino: DD/MM/AA ou horas/ minutos"
                                android:textColor="#000000"
                                android:textSize="16sp"
                                android:textStyle="normal" />

                            <TextView
                                android:id="@+id/tempoRestante_contract"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="sans-serif"
                                android:hint="Tempo restante: DD/MM/AA ou horas/ minutos"
                                android:textColor="#000000"
                                android:textSize="16sp"
                                android:textStyle="normal" />

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="330dp"
                        android:layout_height="265dp"
                        android:padding="10dp"
                        android:layout_marginStart="5dp"
                        android:orientation="vertical"
                        android:gravity="center_horizontal"
                        android:elevation="2dp"
                        android:background="@drawable/carrosel_manager">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="sans-serif"
                                android:textStyle="normal"
                                android:textSize="25sp"
                                android:textColor="#000000"
                                android:text="Pagamento"/>


                        </LinearLayout>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1.5dp"
                            android:background="#ff5c00"
                            android:layout_marginEnd="80dp"
                            android:layout_marginStart="25dp"
                            android:visibility="visible"
                            />

                        <LinearLayout
                            android:layout_marginTop="30dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_gravity="center"
                            android:gravity="start">

                            <TextView
                                android:id="@+id/textView_pay_contract"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="sans-serif"
                                android:text="350.000"
                                android:textColor="#000000"
                                android:textSize="22sp"
                                android:textStyle="normal" />
                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="330dp"
                        android:layout_height="265dp"
                        android:padding="10dp"
                        android:layout_marginStart="5dp"
                        android:orientation="vertical"
                        android:gravity="center_horizontal"
                        android:elevation="2dp"
                        android:background="@drawable/carrosel_manager">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">


                            <TextView

                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="sans-serif"
                                android:textStyle="normal"
                                android:textSize="25sp"
                                android:textColor="#000000"
                                android:text="Estado"/>


                        </LinearLayout>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1.5dp"
                            android:background="#ff5c00"
                            android:layout_marginEnd="80dp"
                            android:layout_marginStart="25dp"
                            android:visibility="visible"
                            />

                        <LinearLayout
                            android:layout_marginTop="30dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_gravity="center"
                            android:gravity="start">

                            <TextView
                                android:id="@+id/textView_estado_contract"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="sans-serif"
                                android:text="Pendente"
                                android:textColor="#000000"
                                android:textSize="22sp"
                                android:textStyle="normal" />
                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>
            </HorizontalScrollView>
        </LinearLayout>
    </ScrollView>
    <!--Botão de aceitar e recusar-->

    <LinearLayout
        android:elevation="8dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/scroll"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:background="@color/white"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingHorizontal="10dp"
        android:paddingVertical="15dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:textStyle="normal"
            android:textSize="21sp"
            android:textColor="#000000"
            android:text="ACÇÕES"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="30dp"
            android:gravity="center">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">
                <ImageView
                    android:id="@+id/button_cancelar_contract"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:src="@drawable/cancelar__3__1"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:fontFamily="sans-serif"
                    android:text="Cancelar"
                    android:textColor="#000000"
                    android:textSize="22sp"
                    android:textStyle="normal" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>