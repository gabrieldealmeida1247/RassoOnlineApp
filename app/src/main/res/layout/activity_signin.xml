<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SigninActivity">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/logo_rasso_online"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="0dp"/>

    <TextView
        android:id="@+id/textView_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:textStyle="bold"
        android:textSize="32sp"
        android:textColor="#e27a3f"
        android:layout_below="@+id/logo"
        android:layout_alignParentStart="true"
        android:text="login"/>

    <TextView
        android:id="@+id/textView_descricao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView_logo"
        android:layout_marginStart="15dp"
        android:layout_marginTop="19dp"
        android:textStyle="normal"
        android:textSize="14sp"
        android:textColor="#000000"
        android:text="FaÃ§a login com o seu nome e sua senha"/>


    <TextView
        android:id="@+id/textView_descricao_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif"
        android:layout_below="@+id/textView_descricao"
        android:layout_marginTop="27dp"
        android:layout_marginStart="15dp"
        android:textStyle="normal"
        android:textSize="12sp"
        android:textColor="#000000"
        android:text="Digite o seu E-mail"/>

    <EditText
        android:id="@+id/email_login"
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView_descricao_email"
        android:layout_centerInParent="true"
        android:layout_marginStart="15dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/inputs_background"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:padding="10dp" />

    <TextView
        android:id="@+id/textView_descricao_senha"
        android:layout_width="113dp"
        android:layout_height="24dp"
        android:layout_below="@+id/email_login"
        android:textStyle="normal"
        android:layout_marginTop="12dp"
        android:layout_marginStart="15dp"
        android:textSize="12sp"
        android:textColor="#000000"
        android:text="Digite a sua senha"/>


    <EditText
        android:id="@+id/password_login"
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView_descricao_senha"
        android:layout_centerInParent="true"
        android:layout_marginStart="15dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/inputs_background"
        android:hint="Password..."
        android:inputType="textPassword"
        android:padding="10dp" />
<LinearLayout
    android:id="@+id/linear_login"
    android:layout_below="@+id/password_login"
    android:layout_marginTop="65dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_centerHorizontal="true">

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/login_btn"
        android:layout_width="155dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/password_login"
        android:background="@drawable/login"
        android:text="Login"
        android:layout_marginRight="10dp"
        android:textAllCaps="false"
        android:textSize="17dp"
        android:textColor="@android:color/white" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/signup_link_btn"
        android:layout_width="155dp"
        android:layout_height="wrap_content"
        android:background="@drawable/cadastro"
        android:text="Sign In"
        android:textAllCaps="false"
        android:textSize="17dp"
        android:textColor="@color/colorOrange"/>
</LinearLayout>
    <TextView
        android:id="@+id/forget_password"
        android:layout_below="@+id/linear_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="14sp"
        android:textColor="#000000"
        android:layout_centerHorizontal="true"
        android:text="esqueci a minha senha"
        android:layout_marginTop="40dp"/>
</RelativeLayout>