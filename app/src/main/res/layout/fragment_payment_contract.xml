<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0a0f26"
    tools:context=".Fragments.PaymentContractFragment">

    <LinearLayout
        android:id="@+id/linear_transparent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#292f3f"
        android:orientation="horizontal"
        android:padding="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="11dp"
            android:layout_marginRight="11dp"

            android:textColor="#ffffff"
            android:textSize="20sp"
            android:textStyle="normal"
            android:text="Transferir dinheiro para outro usuário" />



    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="11dp"
        android:layout_marginRight="11dp"
        android:layout_below="@+id/linear_transparent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="normal"
            android:textSize="22sp"
            android:layout_marginTop="50dp"
            android:textColor="#ffffff"
            android:text="Transferir dinheiro"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="normal"
            android:textSize="22sp"
            android:layout_marginTop="20dp"
            android:textColor="#ffffff"
            android:text="Transferir dinheriro de forma fácil e rápida"/>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/linear_qtd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="45dp"
        android:layout_marginRight="45dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="42dp"
        android:layout_below="@+id/linear_text">


        <TextView
            android:id="@+id/currency_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="AOA"
            android:textColor="#FFFFFF"
            android:background="@drawable/kz"
            android:padding="15dp"
            android:layout_alignParentStart="true"/>

        <EditText
            android:id="@+id/edit_send_amount_contract"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="send here"
            android:layout_marginTop="2dp"
            android:background="@drawable/text_money"
            android:padding="12dp"
            android:inputType="numberDecimal"
            android:layout_toEndOf="@id/currency_label"/>


    </LinearLayout>


    <EditText
        android:id="@+id/edit_text_username_contract"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="send here"
        android:layout_marginTop="20dp"
        android:background="@drawable/edit_text_bg"
        android:padding="12dp"
        android:layout_marginHorizontal="50dp"
        android:inputType="text"
        android:layout_below="@+id/linear_qtd"/>
    <Button
        android:id="@+id/send_contract"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="42dp"
        android:layout_centerHorizontal="true"
        android:textColor="@color/white"
        android:text="Enviar dinheiro"
        android:backgroundTint="@color/colorBlue"
        android:layout_below="@+id/edit_text_username_contract"/>

    <Button
        android:id="@+id/btn_generate_pdf_contract"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_below="@+id/send_contract"
        android:layout_centerInParent="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="28dp"
        android:text="GERAR RELATORIO FINÁNCEIRO" />
</RelativeLayout>