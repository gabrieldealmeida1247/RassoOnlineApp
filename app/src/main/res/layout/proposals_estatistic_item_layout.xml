<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

   <LinearLayout
       android:id="@+id/linear_instante"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:padding="10dp"
       android:orientation="vertical"
       android:gravity="center"
       android:elevation="8dp"
       android:layout_marginTop="10dp"
       android:layout_marginRight="17dp"
       android:layout_marginLeft="17dp"
       android:background="@drawable/carrosel_manager">

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:textStyle="normal"
          android:textSize="22sp"
          android:layout_marginTop="10dp"
          android:textColor="#000000"
          android:gravity="center_horizontal"
          android:text="Total de propostas feitas"/>

      <TextView
          android:id="@+id/total_propF"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:textStyle="normal"
          android:textSize="62sp"
          android:layout_marginTop="10dp"
          android:textColor="#ff5c00"
          android:gravity="center_horizontal"
          android:text="300.000"/>

   </LinearLayout>

   <LinearLayout
       android:layout_below="@+id/linear_qtd"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:padding="10dp"
       android:orientation="vertical"
       android:gravity="center"
       android:elevation="8dp"
       android:layout_marginTop="10dp"
       android:layout_marginRight="17dp"
       android:layout_marginLeft="17dp"
       android:background="@drawable/carrosel_manager">

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:textStyle="normal"
          android:textSize="22sp"
          android:layout_marginTop="10dp"
          android:textColor="#000000"
          android:gravity="center_horizontal"
          android:text="Total de propostas Recebidas"/>

      <TextView
          android:id="@+id/textView_propRec"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:textStyle="normal"
          android:textSize="62sp"
          android:layout_marginTop="10dp"
          android:textColor="#ff5c00"
          android:gravity="center_horizontal"
          android:text="100.000"/>

   </LinearLayout>

   <LinearLayout
       android:id="@+id/linear_qtd4"
       android:layout_below="@+id/linear_qtd"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:padding="10dp"
       android:orientation="vertical"
       android:gravity="center"
       android:elevation="8dp"
       android:layout_marginTop="10dp"
       android:layout_marginRight="17dp"
       android:layout_marginLeft="17dp"
       android:background="@drawable/carrosel_manager">

      <TextView
          android:id="@+id/user_logIn"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:textStyle="normal"
          android:textSize="22sp"
          android:layout_marginTop="10dp"
          android:textColor="#000000"
          android:gravity="center_horizontal"
          android:text="Total de propostas aceitas"/>

      <TextView
          android:id="@+id/textView_propA"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:textStyle="normal"
          android:textSize="62sp"
          android:layout_marginTop="10dp"
          android:textColor="#ff5c00"
          android:gravity="center_horizontal"
          android:text="100.000"/>

   </LinearLayout>

   <LinearLayout
       android:id="@+id/linear_qtd"
       android:layout_below="@+id/linear_instante"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:padding="10dp"
       android:orientation="vertical"
       android:gravity="center"
       android:elevation="8dp"
       android:layout_marginTop="10dp"
       android:layout_marginRight="17dp"
       android:layout_marginLeft="17dp"
       android:background="@drawable/carrosel_manager">

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:textStyle="normal"
          android:textSize="22sp"
          android:layout_marginTop="10dp"
          android:textColor="#000000"
          android:gravity="center_horizontal"
          android:text="Total de propostas recusadas"/>

      <TextView
          android:id="@+id/textView_propR"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:textStyle="normal"
          android:textSize="62sp"
          android:layout_marginTop="10dp"
          android:textColor="#ff5c00"
          android:gravity="center_horizontal"
          android:text="100.000"/>

   </LinearLayout>



   <com.anychart.AnyChartView
       android:id="@+id/pieChartP"
       android:layout_width="match_parent"
       android:layout_height="300dp"
       android:layout_marginTop="10dp"/>
   <Button
       android:id="@+id/btn_generate_pdf"
       android:layout_width="match_parent"
       android:layout_height="55dp"
       android:layout_centerInParent="true"
       android:layout_marginStart="20dp"
       android:layout_marginTop="25dp"
       android:background="@drawable/relatory"
       android:layout_marginEnd="28dp"
       android:text="Gerar relatÃ³rio" />

</LinearLayout>
