                android:layout_marginTop="10dp"
                android:textColor="#ff5c00"
                android:gravity="center_horizontal"
                android:text="100.000"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:orientation="vertical"
            android:gravity="center"
            android:elevation="8dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="17dp"
            android:layout_marginLeft="17dp"
            android:background="@drawable/carrosel_manager">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="normal"
                android:textSize="22sp"
                android:layout_marginTop="10dp"
                android:textColor="#000000"
                android:gravity="center_horizontal"
                android:text="Total de serviços cancelado"/>

            <TextView
                android:id="@+id/textView_totCancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="normal"
                android:textSize="62sp"
                android:layout_marginTop="10dp"
                android:textColor="#ff5c00"
                android:gravity="center_horizontal"
                android:text="100.000"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:orientation="vertical"
            android:gravity="center"
            android:elevation="8dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="17dp"
            android:layout_marginLeft="17dp"
            android:background="@drawable/carrosel_manager">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="normal"
                android:textSize="22sp"
                android:layout_marginTop="10dp"
                android:textColor="#000000"
                android:gravity="center_horizontal"
                android:text="Total de propostas"/>

            <TextView
                android:id="@+id/textView_totProp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="normal"
                android:textSize="62sp"
                android:layout_marginTop="10dp"
                android:textColor="#ff5c00"
                android:gravity="center_horizontal"
                android:text="100.000"/>

        </LinearLayout>

        <com.anychart.AnyChartView
            android:id="@+id/pieChart"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/textView_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linear_qtd"
        android:layout_centerInParent="true"
        android:layout_marginTop="20dp"
        android:textStyle="normal"
        android:textSize="20sp"
        android:textColor="#000000"
        android:text="Estaística Mensal"/>

        <com.github.mikephil.charting.charts.LineChart
            android:id="@+id/lineChart"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/textView_text"
            android:layout_width="match_parent"
            android:layout_height="400dp"/>

    </LinearLayout>
    </RelativeLayout>


